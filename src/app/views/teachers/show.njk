{% extends "layout.njk" %}
{% block content %}
<div class="card">
    <section class="avatar" style=" background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section> 

    <section class="details">

        <h3>Informações do Professor</h3>

        <div class="info">
            <div>Nome</div>
            <div>{{teacher.name}}</div>
        </div>

        <div class="info">
            <div>Idade</div>
            <div>{{teacher.birth_date}}</div>
        </div>

        <div class="info">
            <div>Grau de escolaridade</div>
            <div>{{teacher.education_level}}</div>
        </div>

        <div class="info">
            <div>Tipo de Aula</div>
            <div>{{"Presencial" if teacher.class_type == "P" else "A distância"}}</div>
        </div>

        <div class="info">
            <div>Acompanhamento</div>
            <div>
                {{teacher.subjects_taught}}
               
            </div>
        </div>
        
        <div class="info">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>

        <a href="/teachers/{{teacher.id}}/edit" class ="button">Editar</a>

    </section>     

</div>
{% endblock content %}