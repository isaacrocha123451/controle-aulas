{% extends "layout.njk" %}
{% block content %}
<div class="card table-container">
    <a href="/students/register">Novo</a>
   <table width="100%">
       <thead >
           <tr>
               <th>Professor</th>
               <th>Email</th>
               <th>Ano escolar</th>
               <th>Ação</th>
           </tr>
       </thead>
       <tbody>
           {% for stud in student %}
           
           <tr>
               <td>
                   <span style="background-image: url({{stud.avatar_url}})"></span>
                   {{stud.name}}</td>

                <td>{{stud.email}}</td>
                <td>{{stud.turmas}} </td>
                
                <td> <a href="/students/{{stud.id}}"> Ver</a></td>
           </tr>

           {% endfor %}
       </tbody>
   </table>

</div>
{% endblock content %}